# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index
GET         /getTranscript                          controllers.Application.getTranscript
# GET         /getByFilter/:filterName/:userId        controllers.Application.getByFilter(filterName: String, userId: Int)
GET         /getUserForms/:userId                   controllers.Application.getUserForms(userId: Int)
GET         /getFields                              controllers.Application.getFields
GET         /getVariantColumn                       controllers.Application.getVariantColumn

POST        /editForm                               controllers.Application.editForm
POST        /saveForm                               controllers.Application.saveForm
POST        /upload                                 controllers.Upload.upload

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
# WebJars
GET         /webjars/*file                          controllers.WebJarAssets.at(file)

GET         /*any                                   @controllers.Application.angular(any)