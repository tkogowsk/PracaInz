# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                   controllers.Application.index
GET         /upload                                             controllers.Upload.index

# GET       /getByFilter/:filterName/:userId        controllers.Application.getByFilter(filterName: String, userId: Int)

GET         /getFields/:sample_fake_id/:userName                controllers.Application.getFields(sample_fake_id: Int, userName: String)
GET         /getVariantColumn                                   controllers.Application.getVariantColumn
GET         /getTranscriptData/:sample_fake_id/:userName        controllers.Application.getTranscriptData(sample_fake_id: Int, userName: String)
POST        /getSamplesList                                     controllers.Application.getSamplesList

POST        /uploadFilters                                      controllers.Upload.uploadFilters
POST        /getByTab                                           controllers.Application.getByTab
POST        /logIn                                              controllers.Application.logIn
POST        /count                                              controllers.Application.count
POST        /saveUserFields/:userName                           controllers.Application.saveUserFields(userName: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                       controllers.Assets.versioned(path="/public", file: Asset)
# WebJars
GET         /webjars/*file                                      controllers.WebJarAssets.at(file)

GET         /*any                                               @controllers.Application.angular(any)